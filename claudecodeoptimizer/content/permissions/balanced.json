{
  "_meta": {
    "level": "balanced",
    "description": "Read + lint/format/test auto-approved, writes require approval",
    "use_case": "Standard development, team projects, active codebases"
  },
  "permissions": {
    "allow": [
      "# All read-only Git operations",
      "git status",
      "git status *",
      "git log *",
      "git diff *",
      "git show *",
      "git branch",
      "git branch -a",
      "git branch -l",
      "git branch --list",
      "git remote -v",
      "git tag",
      "git tag -l",
      "git blame *",
      "git shortlog *",

      "# Directory and file inspection",
      "ls",
      "ls *",
      "pwd",
      "tree *",
      "file *",
      "wc *",
      "du *",
      "stat *",
      "head *",
      "tail *",

      "# Environment inspection",
      "env",
      "printenv",
      "which *",
      "whereis *",
      "type *",

      "# Linting and formatting (read-only checks)",
      "npm run lint",
      "npm run lint *",
      "npx eslint *",
      "npx prettier --check *",
      "npx tsc --noEmit",
      "npx tsc --noEmit *",
      "ruff check *",
      "ruff format --check *",
      "black --check *",
      "flake8 *",
      "pylint *",
      "mypy *",
      "cargo fmt --check",
      "cargo clippy *",
      "go fmt -n *",
      "go vet *",
      "golangci-lint *",

      "# Testing (read-only, no coverage files)",
      "npm test",
      "npm run test",
      "npm run test *",
      "npx jest *",
      "npx vitest *",
      "pytest *",
      "python -m pytest *",
      "cargo test *",
      "go test *",
      "make test",

      "# Package info",
      "npm list *",
      "npm outdated",
      "npm audit",
      "pip list",
      "pip show *",
      "pip check",
      "poetry show *",
      "cargo tree",
      "go list *",

      "# Build checks (dry-run)",
      "npm run build --dry-run",
      "cargo check",
      "go build -n *",

      "# Version checks",
      "node --version",
      "npm --version",
      "python --version",
      "python3 --version",
      "pip --version",
      "go version",
      "cargo --version",
      "rustc --version"
    ],
    "deny": [
      "# Destructive file operations",
      "rm -rf *",
      "rm -r *",
      "rm -f *",

      "# Dangerous Git operations",
      "git push --force *",
      "git push -f *",
      "git reset --hard *",
      "git clean -fd *",
      "git clean -fx *",
      "git branch -D *",
      "git rebase *",
      "git cherry-pick *",

      "# System modifications",
      "sudo *",
      "su *",
      "chmod 777 *",
      "chown *",

      "# Network downloads (security risk)",
      "curl * | *",
      "wget * | *",
      "curl -o *",
      "wget -O *",

      "# Container privileged operations",
      "docker run --privileged *",
      "docker exec *",
      "kubectl exec *",
      "kubectl delete *",

      "# Database destructive operations",
      "DROP *",
      "DELETE *",
      "TRUNCATE *",

      "# Package global installs",
      "npm install -g *",
      "pip install --user *",
      "cargo install *",

      "# Shell escapes",
      "eval *",
      "exec *",
      "source *",
      ". *"
    ]
  }
}
