{
  "_meta": {
    "level": "permissive",
    "description": "Most operations auto-approved, only dangerous ops blocked",
    "use_case": "Solo development, trusted environments, rapid prototyping"
  },
  "permissions": {
    "allow": [
      "# All Git operations (except force push)",
      "git *",

      "# File operations",
      "ls *",
      "pwd",
      "tree *",
      "file *",
      "wc *",
      "du *",
      "stat *",
      "head *",
      "tail *",
      "mkdir *",
      "touch *",
      "cp *",
      "mv *",
      "rm *",

      "# Environment",
      "env",
      "printenv",
      "which *",
      "whereis *",
      "type *",
      "export *",

      "# All linting, formatting, testing",
      "npm run *",
      "npx *",
      "yarn *",
      "pnpm *",
      "ruff *",
      "black *",
      "flake8 *",
      "pylint *",
      "mypy *",
      "pytest *",
      "python -m pytest *",
      "cargo fmt *",
      "cargo clippy *",
      "cargo test *",
      "cargo build *",
      "cargo run *",
      "go fmt *",
      "go vet *",
      "go test *",
      "go build *",
      "go run *",
      "make *",

      "# Package management",
      "npm install *",
      "npm uninstall *",
      "npm update *",
      "npm ci",
      "pip install *",
      "pip uninstall *",
      "poetry add *",
      "poetry remove *",
      "poetry install",
      "cargo add *",
      "cargo remove *",
      "go get *",
      "go mod *",

      "# Build and compile",
      "npm run build *",
      "tsc *",
      "webpack *",
      "vite *",
      "esbuild *",
      "rollup *",
      "python setup.py *",
      "pip wheel *",

      "# Docker (non-privileged)",
      "docker build *",
      "docker run *",
      "docker ps *",
      "docker images *",
      "docker logs *",
      "docker-compose up *",
      "docker-compose down *",
      "docker-compose build *",

      "# Network (controlled)",
      "curl *",
      "wget *",
      "http *",

      "# Database (read + controlled writes)",
      "psql *",
      "mysql *",
      "sqlite3 *",
      "mongosh *"
    ],
    "deny": [
      "# Force push (data loss risk)",
      "git push --force *",
      "git push -f *",
      "git push --force-with-lease *",

      "# Hard reset (data loss risk)",
      "git reset --hard *",
      "git clean -fd *",
      "git clean -fx *",
      "git clean -fdx *",

      "# System-level operations",
      "sudo *",
      "su *",
      "su",
      "chmod 777 *",
      "chown -R *",
      "chgrp -R *",

      "# Recursive destructive operations",
      "rm -rf /*",
      "rm -rf ~/*",
      "rm -rf .*",
      "rm -rf /",

      "# Privileged containers",
      "docker run --privileged *",
      "docker run --cap-add *",
      "docker run -v /:/host *",

      "# Remote execution",
      "ssh * rm *",
      "ssh * sudo *",
      "kubectl exec *",
      "kubectl delete namespace *",
      "kubectl delete -A *",

      "# Database destructive",
      "DROP DATABASE *",
      "DROP SCHEMA *",
      "TRUNCATE *",

      "# Global package installs",
      "npm install -g *",
      "pip install --system *",

      "# Shell injection patterns",
      "eval *",
      "exec *",
      "* | bash",
      "* | sh",
      "curl * | bash",
      "curl * | sh",
      "wget * | bash",
      "wget * | sh",

      "# Environment variable leaks",
      "env > *",
      "printenv > *",
      "export * > *"
    ]
  }
}
