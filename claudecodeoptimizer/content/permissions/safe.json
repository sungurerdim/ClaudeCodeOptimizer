{
  "_meta": {
    "level": "safe",
    "description": "Most restrictive - read-only operations auto-approved",
    "use_case": "High-security projects, regulated environments, learning/exploration"
  },
  "permissions": {
    "allow": [
      "# Read-only Git operations",
      "git status",
      "git status *",
      "git log *",
      "git diff *",
      "git show *",
      "git branch",
      "git branch -a",
      "git branch -l",
      "git branch --list",
      "git remote -v",
      "git tag",
      "git tag -l",

      "# Directory listing",
      "ls",
      "ls *",
      "pwd",
      "tree *",

      "# File inspection (read-only)",
      "file *",
      "wc *",
      "du *",
      "stat *",

      "# Environment inspection",
      "env",
      "printenv",
      "which *",
      "whereis *",
      "type *",

      "# Package info (read-only)",
      "npm list *",
      "npm outdated",
      "npm audit",
      "pip list",
      "pip show *",
      "pip check",
      "poetry show *",
      "cargo tree",
      "go list *",

      "# Version checks",
      "node --version",
      "npm --version",
      "python --version",
      "python3 --version",
      "pip --version",
      "go version",
      "cargo --version",
      "rustc --version",
      "java --version",
      "javac --version"
    ],
    "deny": [
      "# Destructive operations",
      "rm *",
      "rmdir *",
      "mv *",
      "cp *",

      "# Git write operations",
      "git push *",
      "git push",
      "git commit *",
      "git add *",
      "git reset *",
      "git checkout *",
      "git merge *",
      "git rebase *",
      "git cherry-pick *",
      "git revert *",
      "git stash *",
      "git clean *",
      "git branch -d *",
      "git branch -D *",
      "git tag -d *",

      "# Package modifications",
      "npm install *",
      "npm uninstall *",
      "npm update *",
      "npm ci",
      "pip install *",
      "pip uninstall *",
      "poetry add *",
      "poetry remove *",
      "cargo add *",
      "cargo remove *",
      "go get *",
      "go install *",

      "# Build/compile operations",
      "npm run *",
      "yarn *",
      "pnpm *",
      "make *",
      "cmake *",
      "cargo build *",
      "cargo run *",
      "go build *",
      "go run *",

      "# System modifications",
      "sudo *",
      "su *",
      "chmod *",
      "chown *",
      "chgrp *",

      "# Network operations",
      "curl *",
      "wget *",
      "ssh *",
      "scp *",
      "rsync *",

      "# Docker operations",
      "docker *",
      "docker-compose *",
      "podman *",
      "kubectl *",

      "# Dangerous patterns",
      "> *",
      ">> *",
      "| *",
      "; *",
      "&& *",
      "|| *"
    ]
  }
}
