{
  "env": {
    "CLAUDE_CODE_HIDE_ACCOUNT_INFO": "1",
    "MAX_THINKING_TOKENS": "32000",
    "MAX_MCP_OUTPUT_TOKENS": "35000",
    "DISABLE_PROMPT_CACHING": "0",
    "BASH_MAX_OUTPUT_LENGTH": "35000"
  },
  "statusLine": {
    "type": "command",
    "command": "node -e \"require('child_process').spawnSync('node',[require('path').join(process.env.HOME || process.env.USERPROFILE,'.claude','cco-statusline.js')],{stdio:'inherit'})\"",
    "padding": 1
  },
  "alwaysThinkingEnabled": true
}
