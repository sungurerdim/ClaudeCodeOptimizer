{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cco.dev/schemas/docs.schema.json",
  "title": "CCO Docs Command Arguments",
  "description": "JSON Schema for /cco:docs command argument validation",
  "type": "object",
  "properties": {
    "auto": {
      "type": "boolean",
      "description": "Fully unattended mode - detect, analyze, generate all missing docs"
    },
    "preview": {
      "type": "boolean",
      "description": "Analyze gaps only, no generation"
    },
    "scope": {
      "type": "string",
      "description": "Single scope to run. Valid: readme, api, dev, user, ops, changelog, refine, verify",
      "enum": ["readme", "api", "dev", "user", "ops", "changelog", "refine", "verify"]
    },
    "update": {
      "type": "boolean",
      "description": "Regenerate even if docs exist (update mode)"
    }
  },
  "allOf": [
    {
      "description": "Mutual exclusivity: --preview and --auto are mutually exclusive",
      "not": {
        "required": ["preview", "auto"],
        "properties": {
          "preview": { "const": true },
          "auto": { "const": true }
        }
      }
    }
  ],
  "examples": [
    {
      "description": "Generate all missing docs, unattended",
      "args": { "auto": true }
    },
    {
      "description": "Preview documentation gaps",
      "args": { "preview": true }
    },
    {
      "description": "Generate README only",
      "args": { "scope": "readme" }
    },
    {
      "description": "Update existing docs",
      "args": { "update": true }
    }
  ]
}
