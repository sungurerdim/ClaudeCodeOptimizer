{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cco.dev/schemas/commit.schema.json",
  "title": "CCO Commit Command Arguments",
  "description": "JSON Schema for /cco:commit command argument validation",
  "type": "object",
  "properties": {
    "preview": {
      "type": "boolean",
      "description": "Show commit plan only, don't execute"
    },
    "single": {
      "type": "boolean",
      "description": "Force single commit"
    },
    "staged-only": {
      "type": "boolean",
      "description": "Commit only staged changes"
    }
  },
  "examples": [
    {
      "description": "Preview commit plan",
      "args": { "preview": true }
    },
    {
      "description": "Force single commit",
      "args": { "single": true }
    },
    {
      "description": "Commit only staged files",
      "args": { "staged-only": true }
    }
  ]
}
