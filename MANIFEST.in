# Include important files
include README.md
include LICENSE
include pyproject.toml

# Include package data
recursive-include claudecodeoptimizer/schemas *

# Include templates directory (reference templates for users)
recursive-include templates *.template

# Include content directory (SSOT for principles, commands, etc.)
recursive-include content *

# Exclude unwanted files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude .git*
