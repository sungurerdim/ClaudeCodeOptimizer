# Include important files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include package data
recursive-include claudecodeoptimizer/templates *
recursive-include claudecodeoptimizer/knowledge *
recursive-include claudecodeoptimizer/schemas *

# Include content directory (SSOT for principles, commands, etc.)
recursive-include content *

# Exclude unwanted files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude .git*
