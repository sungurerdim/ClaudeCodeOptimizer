# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.py]
indent_size = 4
max_line_length = ${LINE_LENGTH}

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = ${LINE_LENGTH}

[*.{rs}]
indent_size = 4
max_line_length = 100

[*.go]
indent_style = tab
max_line_length = 120

[Makefile]
indent_style = tab
