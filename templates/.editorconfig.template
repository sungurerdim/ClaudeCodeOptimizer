# EditorConfig is awesome: https://EditorConfig.org
# CCO-generated configuration

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = ${LINE_LENGTH}

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = ${LINE_LENGTH}

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = ${LINE_LENGTH}

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Package files
[{package.json,*.lock}]
indent_style = space
indent_size = 2
